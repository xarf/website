{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://xarf.org/schemas/v4/types/content-identity-theft.json",
	"title": "XARF v4 Content - Identity Theft Type Schema",
	"description": "Schema for identity theft and impersonation",
	"allOf": [
		{
			"$ref": "./content-base.json"
		},
		{
			"type": "object",
			"properties": {
				"type": {
					"const": "identity-theft"
				},
				"theft_type": {
					"type": "string",
					"enum": ["financial", "medical", "criminal", "synthetic", "child", "other"],
					"description": "Type of identity theft"
				},
				"stolen_data_types": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": ["ssn", "credit_card", "bank_account", "passport", "drivers_license", "medical_records", "credentials", "other"]
					}
				},
				"victim_count": {
					"type": "integer",
					"description": "Number of victims affected"
				}
			}
		}
	]
}
